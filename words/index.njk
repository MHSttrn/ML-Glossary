<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Machine Learning Glossary (Persian)</title>
    <link rel="stylesheet" href="/assets/index.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/rastikerdar/vazir-font@v26.0.2/dist/font-face.css">
    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
  </head>
  <body>
    <script>
      if (window.netlifyIdentity) {
        window
          .netlifyIdentity
          .on("init", user => {
            if (!user) {
              window
                .netlifyIdentity
                .on("login", () => {
                  document.location.href = "/admin/";
                });
            }
          });
      }
    </script>

    <header></header>

    <main>
      <div id="search">
        <span>جستجو</span>
        <input type="text" name="query" id="query"/>
      </div>
      <div id="words">
        {%- for C in "ABCDEFGHIJKLMNOPQRSTUVWXYZ" -%}
          <div class="letter-section" id="{{C}}">
            <a href="/{{C }}">{{C}}</a>
            {%- for word in collections[C] -%}
              <details class="word">
                <summary>
                  <a href="{{word.url}}">{{word.data.word}}</a>
                  <span>
                    <span class="translation">{{word.data.translation}}</span>
                    <svg fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                    </svg>
                  </span>
                </summary>
                {{word.templateContent | safe}}
              </details>
            {%- endfor -%}
          </div>
        {%- endfor -%}
      </div>
    </main>

    <aside>
      <ul>
        {%- for C in "ABCDEFGHIJKLMNOPQRSTUVWXYZ" -%}
          <li>
            <a href='#{{C}}'>{{C}}</a>
          </li>
        {%- endfor -%}
      </ul>
    </aside>

    <script src="/assets/index.js"></script>
  </body>
</html>